{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch API - testnet",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/api/src/main.ts",
      "outFiles": [
        "${workspaceRoot}/api/dist/server.js"
      ],
      "preLaunchTask": "npm: build:dev - api",
      "env": {
        "CHAIN_ENV": "testnet",
        "CWD": "${workspaceRoot}",
      },
      //"envFile": "${workspaceRoot}/api/testnet.env",
      "sourceMaps": true
    }
  ]
}