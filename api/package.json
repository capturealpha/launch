{
  "name": "notebookboost-api",
  "version": "0.0.1",
  "description": "API for creating and deploying jupyter notebooks on akash",
  "author": "capturealpha",
  "license": "TBD",
  "main": "server.js",
  "predeploy": "npm version patch",
  "scripts": {
    "start": "webpack --config webpack.dev.js --watch",
    "build:dev": "webpack --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint --cache \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint --cache \"src/**/*.{js,jsx,ts,tsx}\" --fix",
    "depcheck": "depcheck --ignores=typescript,ts-jest,ts-loader,webpack,webpack-cli,webpack-node-externals,alias-hq,eslint,eslint-plugin-import,eslint-plugin-node,eslint-plugin-promise,eslint-plugin-standard,eslint-plugin-jest,eslint-plugin-react,eslint-plugin-react-hooks,eslint-plugin-jsx-a11y,eslint-plugin-prettier,eslint-config-prettier,prettier,prettier-eslint,prettier-eslint-cli,prettier-eslint-parser,prettier-tslint,tslint,tslint-config-prettier,tslint-plugin-prettier,tslint-react,tslint-react-hooks,tslint-eslint-rules,tslint-config-airbnb,tslint-config-airbnb-base,tslint-config-standard,tslint-plugin-import,tslint-plugin-jsdoc,tslint-plugin-prettier,tslint-plugin-react,tslint-plugin-react-hooks,tslint-plugin-sonarts,tslint-sonarts",
    "prepare": "cd ../ && husky install api/.husky",
    "prettier": "prettier",
    "prettier:check": "prettier --list-different \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prettier:fix": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "update-deps": "npx npm-check-updates -u -a --prune"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "npm run lint:fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/capturealpha/notebookboost"
  },
  "dependencies": {
    "@akashnetwork/akashjs": "0.4.9",
    "cors": "^2.8.5",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "ts-loader": "^9.4.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "alias-hq": "^6.2.2",
    "depcheck": "^1.4.3",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^8.47.0",
    "nodemon": "^3.0.1",
    "nodemon-webpack-plugin": "^4.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  }
}

